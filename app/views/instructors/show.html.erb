<div class="my-4 flex flex-col items-center">
  <h1 class="text-4xl font-bold">
    <%= @instructor.name %>
  </h1>
  <div class="m-4">
    <h2 class="text-2xl font-bold">Courses</h2>
    <ul>
      <% @instructor.courses.each do |course| %>
        <li class="my-2 border-b border-black hover:border-b hover:border-violet-800">
          <%= link_to course.name, course_path(course.id) %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Create new course", new_course_path, class: "text-white m-2 border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800"   %>
  </div>
  <div class="m-4">
    <h2 class="text-2xl font-bold">Forum Threads</h2>
    <ul>
      <% @instructor.forum_threads.each do |forum_thread| %> 
        <li class="my-2 border-b border-black hover:border-b hover:border-violet-800">
          <%= link_to forum_thread.title, forum_thread_path(forum_thread.id) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
