<div class="my-4 flex flex-col items-center">
  <h1 class="text-4xl">
    <b>
      <%= @forum_thread.title %>
    </b>
  </h1>
  <div class="card-body">
    <div class="text-center">
      <p class="m-4">
        <%= @forum_thread.description %>
      </p>
      <h3 class="text-lg mt-2">
        Instructor:
      </h3>
      <p>
        <%= @forum_thread.instructor.name %>
      </p>
      <h3 class="text-lg mt-2">
        On:
      </h3>
      <p>
        <%= @forum_thread.created_at.strftime("%H:%M %d/%m/%Y") %>
      </p>
      <div class="flex justify-center">
        <% if current_instructor == @forum_thread.course.instructor %>
          <%= link_to "Edit", edit_forum_thread_path(@forum_thread.id), class: "text-white m-2 border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800" %>
          <%= button_to "Delete", forum_thread_path(@forum_thread.id), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this thread?" }, class: "text-white m-2 border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800" %>
        <% end %>
      </div>
    </div>
    <div class="card-text">
      <%= render partial:"forum_posts/new", locals: {forum_thread_id: @forum_thread.id} %> 
    </div>
  </div>
  <div class="min-w-100 flex-grow">
    <%= render partial: "forum_posts/forum_posts" %>
  </div>
  
</div>

