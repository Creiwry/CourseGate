
<div class="container">
  <h1>Edit Thread</h1>
  <%= form_with(model: @forum_thread, url: forum_thread_path(@forum_thread.id), method: :patch) do |form| %>
    <%= form.hidden_field :course_id, value: @forum_thread.course_id %>
    <%= form.label :title, class: "form-label"  %>
    <%= form.text_field :title, placeholder: @forum_thread.title, class: "form-control"  %>
    <br>
    <%= form.label :description, class: "form-label"  %>
    <%= form.text_area :description, placeholder: @forum_thread.description, class: "form-control" %>
    <br>
    <%= form.submit 'Edit Thread', class: "btn btn-primary" %>
  <% end %>
</div>

