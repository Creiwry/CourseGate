<div class="my-4 flex flex-col items-center">
  <h1 class="text-4xl">
    <b>
      Create New Thread
    </b>
  </h1>
  <%= form_with(model: @forum_thread, url: forum_threads_path, method: :post) do |form| %>
    <%= form.hidden_field :course_id, value: params[:course_id] %>

    <div class="my-2">
      <%= form.label :title, class: "form-label" %><br />
      <%= form.text_field :title, placeholder: 'Please enter title', class: "fill-none text-black bg-none border rounded-xl border-white" %>
    </div>

    <div class="my-2">
      <%= form.label :description, class: "form-label" %><br />
      <%= form.text_area :description, placeholder: "Please enter description of thread", class: "fill-none text-black bg-none border rounded-xl border-white" %>
    </div>

    <div class="actions text-center mb-3">
      <%= form.submit 'Post Thread', class: "text-white border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800" %>
    </div>
  <% end %>
</div>
