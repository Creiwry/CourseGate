<div class="my-4 flex flex-col items-center">
  <%= form_with(model: locals[:forum_post], url: forum_thread_forum_post_path(@forum_thread, locals[:forum_post]), method: :patch) do |form| %>

    <div>
    <%= form.text_area :content, placeholder: locals[:forum_post].content, class: "fill-none form-control w-50 border rounded-xl border-white w-50" %>
    </div>

    <div class="actions text-center mb-3">
      <%= form.submit "Edit Post", class: "hover:cursor-pointer text-white border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800" %>
    </div>
  <% end %>
</div>
