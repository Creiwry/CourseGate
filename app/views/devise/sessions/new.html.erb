<div class="my-4 flex flex-col items-center">
  <h2 class="text-4xl">
    <b>
      Log in
    </b>
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="my-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"fill-none text-white border rounded-xl border-white" %>
    </div>

    <div class="my-2">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"fill-none text-white border rounded-xl border-white"  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-2">
        <%= f.check_box :remember_me, class:"fill-none border rounded-xl border-white"  %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions text-center mb-3">
      <%= f.submit "Log in", class:"hover:cursor-pointer text-white border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
