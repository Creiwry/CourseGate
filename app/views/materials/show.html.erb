<div class="my-40">
  <h3 class="text-3xl text-center"><b><%= @material.course.name %></b></h3>
  <h3 class="text-2xl text-center"><b><%= @material.title %></b></h3>
  <br>
  <div class="text-center" >
    <p>
      <%= @material.content %>
    </p>
    <div class="flex flex-row justify-center my-3">
      <% if current_instructor && current_instructor == @material.course.instructor %>
        <%= link_to "Edit Material", edit_course_material_path(params[:course_id], @material.id), class: "text-white border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800 mx-2" %>
      <% end %>
      <%= link_to "Go back to course", course_path(params[:course_id]), class:"text-white border rounded-lg border-yellow-400 bg-black-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-yellow-600 dark:focus:ring-yellow-800 mx-2" %>
    </div>
  </div>
</div>
